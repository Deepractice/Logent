{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["outputs/test/**"]
    },
    "test:dev": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:ci": {
      "dependsOn": ["build"],
      "outputs": ["outputs/coverage/**", "outputs/test/**"]
    },
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
